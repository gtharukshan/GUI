<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="400"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
       Background="White">
    <Grid>
       
        <Border Background="White" CornerRadius="10" Padding="20" Margin="10">
            <StackPanel>

                <Grid Background="Black" Height="50" Margin="20">
                    <TextBlock Text="Login" FontSize="24" FontWeight="Bold" Foreground="White"
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>

          
                    <Button Content="X" Foreground="White" Background="Transparent" FontSize="18"
                            BorderThickness="0" Cursor="Hand"
                            HorizontalAlignment="Right" VerticalAlignment="Center"
                            Padding="5" Margin="0,0,10,0"
                            Click="BtnClose_Click"/>
                </Grid>
                <TextBlock Text="Username" Foreground="Black"/>
                <TextBox x:Name="txtUsername" Height="30" Margin="0,5,0,10"/>

                <TextBlock Text="Password" Foreground="Black"/>
                <PasswordBox x:Name="txtPassword" Height="30" Margin="0,5,0,10"/>

                <Button Content="Login" Background="#007AFF" Foreground="White" 
                        FontWeight="Bold" Height="35" Click="BtnLogin_Click"/>

                <TextBlock x:Name="lblMessage" Foreground="Red" TextAlignment="Center" 
                           Margin="10,5,10,0"/>
                <Image Source="C:\Users\User.DESKTOP-GV9EN6P\Downloads\project\WpfApp1\images\HealthSyncHealthSync_Logo1.png" Stretch="Fill" Width="300" Height="200"/>
            </StackPanel>

        </Border>
    </Grid>
</Window>
